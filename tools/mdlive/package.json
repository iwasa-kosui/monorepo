{
  "name": "mdlive",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "mdlive": "./bin/mdlive.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "start": "node ./bin/mdlive.mjs",
    "dev": "tsx ./src/cli.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "dprint fmt",
    "format:check": "dprint check"
  },
  "dependencies": {
    "@iwasa-kosui/result": "workspace:*",
    "ignore": "7.0.5",
    "marked": "^15.0.0",
    "shiki": "^3.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "^20",
    "@types/ws": "^8.5.0",
    "dprint": "0.51.1",
    "eslint": "^9",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5",
    "typescript-eslint": "8.53.0",
    "vitest": "4.0.15"
  }
}
