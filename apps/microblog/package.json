{
  "type": "module",
  "engines": {
    "node": "24.12.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.51.4",
    "@fedify/fedify": "1.10.0",
    "@fedify/hono": "1.10.0",
    "@fedify/postgres": "1.10.0",
    "@hono/node-server": "1.19.6",
    "@hono/standard-validator": "0.2.1",
    "@iwasa-kosui/result": "workspace:*",
    "@js-temporal/polyfill": "0.5.1",
    "@logtape/logtape": "1.3.5",
    "@standard-schema/spec": "1.1.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.1",
    "marked": "17.0.1",
    "pg": "8.16.3",
    "postgres": "3.4.7",
    "sanitize-html": "2.17.0",
    "x-forwarded-fetch": "0.2.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "24.10.4",
    "@types/pg": "8.16.0",
    "@types/sanitize-html": "2.16.0",
    "drizzle-kit": "0.31.8",
    "esbuild": "0.27.2",
    "tsx": "4.21.0"
  },
  "scripts": {
    "dev": "dotenvx run -- tsx watch ./src/index.ts",
    "prod": "dotenvx run -- node --import tsx ./src/index.ts",
    "prebuild": "pnpm --filter result run build",
    "build": "esbuild ./src/index.ts --bundle --outfile=microblog.cjs --platform=node",
    "drizzle:push": "dotenvx run -- drizzle-kit push",
    "drizzle:generate": "dotenvx run -- drizzle-kit generate",
    "drizzle:migrate": "dotenvx run -- drizzle-kit migrate",
    "compose:up": "dotenvx run -- docker compose up -d",
    "compose:down": "dotenvx run -- docker compose down --volumes --remove-orphans"
  }
}
