{
  "type": "module",
  "engines": {
    "node": "24.12.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.51.4",
    "@fedify/fedify": "1.10.0",
    "@fedify/hono": "1.10.0",
    "@fedify/postgres": "1.10.0",
    "@hono/node-server": "1.19.6",
    "@hono/standard-validator": "0.2.1",
    "@iwasa-kosui/result": "workspace:*",
    "@js-temporal/polyfill": "0.5.1",
    "@logtape/logtape": "1.3.5",
    "@standard-schema/spec": "1.1.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.1",
    "marked": "17.0.1",
    "pg": "8.16.3",
    "postgres": "3.4.7",
    "sanitize-html": "2.17.0",
    "x-forwarded-fetch": "0.2.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@hono/vite-build": "1.9.0",
    "@hono/vite-dev-server": "0.24.0",
    "@types/node": "24.10.4",
    "@types/pg": "8.16.0",
    "@types/sanitize-html": "2.16.0",
    "dprint": "0.51.1",
    "drizzle-kit": "0.31.8",
    "esbuild": "0.27.2",
    "eslint": "^9.36.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0",
    "vite": "7.3.1"
  },
  "scripts": {
    "dev": "dotenvx run -- vite",
    "prod": "cp .env dist/.env && cd dist && dotenvx run -- node ./index.js",
    "prebuild": "pnpm --filter result run build",
    "build": "dotenvx run -- vite build --mode client && vite build",
    "drizzle:push": "dotenvx run -- drizzle-kit push",
    "drizzle:generate": "dotenvx run -- drizzle-kit generate",
    "drizzle:migrate": "dotenvx run -- drizzle-kit migrate",
    "compose:up": "dotenvx run -- docker compose up -d",
    "compose:down": "dotenvx run -- docker compose down --volumes --remove-orphans",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "dprint fmt",
    "format:check": "dprint check"
  }
}
