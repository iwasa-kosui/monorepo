{
  "name": "@iwasa-kosui/kosui-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles/index.css"
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json && cp -r src/styles dist/styles",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "dprint fmt",
    "format:check": "dprint check"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4",
    "dprint": "0.51.1",
    "eslint": "^9",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "jsdom": "^26",
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5",
    "vite": "^6",
    "typescript-eslint": "8.53.0",
    "vitest": "4.0.15"
  }
}
