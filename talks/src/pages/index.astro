---
import PresentationCard from '@/components/PresentationCard.astro';
import ProfileSection from '@/components/ProfileSection.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { findPresentations } from '@/utils/presentations';

const presentations = findPresentations();
---

<BaseLayout title="Talks - kosui.me">
  <main class="max-w-2xl mx-auto px-6 py-8 relative">
    <ProfileSection />

    <section>
      <h2 class="text-lg font-bold mb-4 text-charcoal dark:text-gray-100">
        Presentations
      </h2>
      <div class="space-y-4">
        {
          presentations.map((presentation) => (
            <PresentationCard presentation={presentation} />
          ))
        }
      </div>
    </section>
  </main>
</BaseLayout>
