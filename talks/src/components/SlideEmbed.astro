---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---

<div class="aspect-video w-full rounded-clay overflow-hidden shadow-clay dark:shadow-clay-dark">
  <iframe
    src={src}
    title={title}
    class="w-full h-full border-0"
    loading="lazy"
    allowfullscreen
  ></iframe>
</div>
