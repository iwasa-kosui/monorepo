---
import type { OgpData } from '@/utils/presentations';

interface Props {
  ogpData: OgpData;
}

const { ogpData } = Astro.props;

// Extract hostname for display
function getHostname(url: string): string {
  try {
    return new URL(url).hostname;
  } catch {
    return url;
  }
}

const hostname = getHostname(ogpData.url);
const hasImage = !!ogpData.imageUrl;
const displayTitle = ogpData.title || hostname;
---

<a
  href={ogpData.url}
  target="_blank"
  rel="noopener noreferrer"
  class="block bg-cream dark:bg-gray-800 rounded-clay shadow-clay dark:shadow-clay-dark overflow-hidden clay-hover-lift hover:shadow-clay-hover dark:hover:shadow-clay-dark-hover"
>
  <div class={hasImage ? 'flex' : ''}>
    {
      hasImage && (
        <div class="w-32 h-24 flex-shrink-0 bg-sand dark:bg-gray-700">
          <img
            src={ogpData.imageUrl!}
            alt=""
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      )
    }
    <div class="flex-1 p-4 min-w-0">
      <h4 class="text-sm font-medium text-charcoal dark:text-gray-100 truncate">
        {displayTitle}
      </h4>
      {
        ogpData.description && (
          <p class="text-xs text-charcoal-light dark:text-gray-400 mt-1 line-clamp-2">
            {ogpData.description}
          </p>
        )
      }
      <div class="flex items-center gap-1 mt-2 text-xs text-terracotta dark:text-terracotta-light">
        <svg
          class="w-3 h-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          />
        </svg>
        <span class="truncate">{hostname}</span>
      </div>
    </div>
  </div>
</a>
